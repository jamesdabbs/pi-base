#   ext = klass == Trait ? :bmd : :md
#   klass.find_each do |obj|
#     File.open "#{Brubeck::GollumPath}/#{klass.name}/#{obj.name}.#{ext}", "w" do |f|
#       f.puts obj[:description]
#     end
#   end
# end

